<div class="card pricing-table__card border-0 h-100">
  <div class="card-body d-flex flex-column">
    <h2 class="card-title h2 text-primary-dark mb-3 mt-3 mt-md-5"><%= plan.name %></h2>
    <% if plan.tagline.present? %>
      <p class="text-muted mb-3"><%= plan.tagline %></p>
    <% end %>

    <div class="mt-2 mb-4">
      <div class="h4 text-primary-dark">
        <%= plan.formatted_price %>
        <% unless plan.free? %>
          per month
        <% end %>
      </div>
    </div>

    <div class="mt-1 mb-4">
      <% if logged_in? %>
        <% if current_account.plan == plan %>
          <button class="btn btn-outline-primary rounded-pill" disabled>Current plan</button>
        <% elsif plan.free? %>
          <p class="text-muted small mb-0">Contact us to downgrade</p>
        <% else %>
          <%= link_to "Choose plan", checkout_path(plan), class: "btn btn-primary rounded-pill" %>
        <% end %>
      <% else %>
        <%= link_to "Sign in to choose", login_path, class: "btn btn-primary rounded-pill" %>
      <% end %>
    </div>
  </div>
</div>