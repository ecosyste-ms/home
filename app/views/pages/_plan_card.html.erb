<div class="card pricing-table__card border-0 h-100">
  <div class="card-body d-flex flex-column">
    <h2 class="card-title h2 text-primary-dark mb-3 mt-3 mt-md-5"><%= plan.name %></h2>
    <% if plan.tagline.present? %>
      <p class="text-muted mb-3"><%= plan.tagline %></p>
    <% end %>

    <div class="mt-2 mb-4">
      <div class="h4 text-primary-dark">
        <%= plan.formatted_price %>
        <% unless plan.free? %>
          per month
        <% end %>
      </div>
    </div>

    <div class="mt-1 mb-4">
      <% if plan.free? %>
        <a href="#" class="btn btn-outline-primary rounded-pill">Get access</a>
      <% else %>
        <a href="#" class="btn btn-primary rounded-pill">Choose</a>
      <% end %>
    </div>
  </div>
</div>