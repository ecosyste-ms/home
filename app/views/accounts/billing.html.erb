<%= render 'accounts/header' %>

<div class="container">
  <div class="row">
    <div class="col-12 col-lg-3">
      <%= render 'accounts/navigation' %>
    </div>
    <div class="col-12 col-lg-9">
      <h1 class="mb-4">Billing</h1>
      <div class="row">
        <div class="col col-lg-7">
          <div class="well p-3 rounded">
            <h2 class="h4">Payment method</h2>

            <% if @account.collection_method == 'send_invoice' %>
              <p>
                <%= bootstrap_icon 'file-text', width: 18, height: 18, aria_hidden: 'true', focusable: 'false', role: 'img', class: 'me-2' %>
                <strong>Invoice payment</strong> (NET <%= @account.days_until_due || 30 %> terms)
              </p>

              <% if @account.pending_invoice %>
                <div class="alert alert-info mb-2">
                  <p class="mb-1"><strong>Invoice due:</strong> <%= @account.pending_invoice.due_date.strftime('%b %d, %Y') %></p>
                  <p class="mb-1"><strong>Amount:</strong> <%= @account.pending_invoice.formatted_amount %></p>
                  <p class="mb-0"><strong>Status:</strong> <%= @account.pending_invoice.status.titleize %></p>
                </div>
                <p class="small">
                  <a href="<%= @account.pending_invoice.invoice_url %>" target="_blank" class="btn btn-sm btn-primary">Pay Invoice</a>
                </p>
              <% else %>
                <p class="text-muted small">No pending invoices</p>
              <% end %>

              <hr class="my-2">
              <p class="small text-muted mb-0">
                <strong>Payment instructions:</strong><br>
                Invoices will be sent to <%= @account.email %> with payment instructions.
              </p>
            <% elsif @account.payment_method_type.present? %>
              <p>
                <%= bootstrap_icon 'credit-card', width: 18, height: 18, aria_hidden: 'true', focusable: 'false', role: 'img', class: 'me-2' %>
                <%= @account.payment_method_type %> ending in <code><%= @account.payment_method_last4 %></code> expiry <code><%= @account.payment_method_expiry %></code>
              </p>
              <p class="small">
                <a href="#" data-bs-toggle="modal" data-bs-target="#updatePaymentMethodModal">Update payment method</a>
              </p>
            <% else %>
              <p class="text-muted">
                <%= bootstrap_icon 'credit-card', width: 18, height: 18, aria_hidden: 'true', focusable: 'false', role: 'img', class: 'me-2' %>
                No payment method on file
              </p>
              <% if @account.current_subscription %>
                <p class="small">
                  <a href="#" data-bs-toggle="modal" data-bs-target="#updatePaymentMethodModal" class="btn btn-sm btn-primary">Add payment method</a>
                </p>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="col col-lg-5">
          <h2 class="h6 fw-normal">Your plan</h2>
          <h3 class="h4"><%= @account.plan_name %></h3>
          <% if @account.plan.present? %>
            <% if @account.plan.free? %>
              <p class="small"><strong><%= number_with_delimiter(@account.plan_requests) %> requests</strong> per hour</p>
              <p class="small text-muted mb-0">No payment required</p>
            <% else %>
              <p class="small"><strong><%= number_with_delimiter(@account.plan_requests) %> requests</strong> per hour at <strong>$<%= @account.plan_price.to_i %></strong> per <%= @account.plan_billing_period %></p>
              <p class="small mb-0">Billed <em><%= @account.formatted_billing_period %></em></p>
            <% end %>
          <% end %>
          <p class="small"><a href="<%= plan_account_path %>">Change plan</a></p>
          <hr />

          <% if @account.next_payment_date.present? %>
            <p class="small mb-0">
              Next payment due
              <strong><%= @account.next_payment_date.strftime('%b %d, %Y') %></strong>
            </p>
          <% end %>
        </div>
      </div>
      <h2 class="h3 mt-4 mb-3">Billing history</h2>
      <% if @account.billing_history.any? %>
        <div class="table-responsive">
          <table class="table">
            <thead class="table-light">
              <tr>
                <th scope="col">Month</th>
                <th scope="col">Amount</th>
                <th scope="col">Invoice</th>
              </tr>
            </thead>
            <tbody>
              <% @account.billing_history.each do |invoice| %>
                <tr>
                  <td><%= invoice.month %></td>
                  <td><%= invoice.formatted_amount %></td>
                  <td><a href="<%= invoice.invoice_url %>">View Invoice</a></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="well p-4 text-center">
          <p class="text-muted mb-0">No billing history yet.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Update Payment Method Modal -->
<div class="modal fade" id="updatePaymentMethodModal" tabindex="-1" aria-labelledby="updatePaymentMethodModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="updatePaymentMethodModalLabel">Update Payment Method</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="update-payment-method-form">
          <div class="mb-3">
            <label for="card-element-update" class="form-label">Card information</label>
            <div id="card-element-update" class="form-control" style="height: 40px; padding-top: 10px;">
              <!-- Stripe Element will be inserted here -->
            </div>
            <div id="card-errors-update" class="text-danger small mt-2" role="alert"></div>
          </div>
          <div id="update-message" class="mt-3"></div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" id="update-payment-method-button" class="btn btn-primary">
          <span id="update-button-text">Update payment method</span>
          <span id="update-button-spinner" class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
        </button>
      </div>
    </div>
  </div>
</div>

<% if @account.stripe_customer_id.present? %>
<script src="https://js.stripe.com/v3/"></script>
<script>
  // Initialize Stripe
  const stripe = Stripe('<%= Rails.configuration.stripe[:publishable_key] %>');
  const elements = stripe.elements();

  // Create card element for update modal
  const cardElementUpdate = elements.create('card', {
    style: {
      base: {
        fontSize: '16px',
        color: '#32325d',
        fontFamily: '-apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif',
        '::placeholder': {
          color: '#aab7c4'
        }
      },
      invalid: {
        color: '#dc3545'
      }
    }
  });

  // Mount when modal is shown
  document.getElementById('updatePaymentMethodModal').addEventListener('shown.bs.modal', function () {
    cardElementUpdate.mount('#card-element-update');
  });

  // Handle real-time validation errors
  cardElementUpdate.on('change', (event) => {
    const displayError = document.getElementById('card-errors-update');
    if (event.error) {
      displayError.textContent = event.error.message;
    } else {
      displayError.textContent = '';
    }
  });

  // Handle form submission
  const updateButton = document.getElementById('update-payment-method-button');
  const updateButtonText = document.getElementById('update-button-text');
  const updateButtonSpinner = document.getElementById('update-button-spinner');
  const updateMessage = document.getElementById('update-message');

  updateButton.addEventListener('click', async (event) => {
    event.preventDefault();
    setUpdateLoading(true);

    // Create payment method
    const {error, paymentMethod} = await stripe.createPaymentMethod({
      type: 'card',
      card: cardElementUpdate
    });

    if (error) {
      showUpdateMessage(error.message, 'danger');
      setUpdateLoading(false);
      return;
    }

    // Submit to server
    try {
      const response = await fetch('<%= update_payment_method_account_path %>', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
        },
        body: JSON.stringify({
          payment_method_id: paymentMethod.id
        })
      });

      const result = await response.json();

      if (!response.ok) {
        showUpdateMessage(result.error || 'An error occurred', 'danger');
        setUpdateLoading(false);
        return;
      }

      // Success
      showUpdateMessage('Payment method updated successfully!', 'success');
      setTimeout(() => {
        window.location.reload();
      }, 1500);
    } catch (error) {
      showUpdateMessage('An unexpected error occurred', 'danger');
      setUpdateLoading(false);
    }
  });

  function setUpdateLoading(isLoading) {
    updateButton.disabled = isLoading;
    updateButtonText.classList.toggle('d-none', isLoading);
    updateButtonSpinner.classList.toggle('d-none', !isLoading);
  }

  function showUpdateMessage(message, type = 'info') {
    updateMessage.innerHTML = `<div class="alert alert-${type}" role="alert">${message}</div>`;
  }
</script>
<% end %>

